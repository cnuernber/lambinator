<project name="lambinator" default="jar">

  <description>
	Build the lambinator system
  </description>

  <property name="src" location="src"/>
  <property name="build" location="classes"/>
  <property name="jsrc" location="src/com/trolltech/demos"/>

  <available property="hasclojure" file="${clojure.jar}"/>

  <!-- The JAR file to create. -->
  <property name="jarfile" location="lambinator.jar"/>

  <target name="init">
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>

  <target name="clean" description="Remove generated files and directories.">
    <delete file="${jarfile}"/>
    <delete dir="${build}"/>
  </target>
  <target name="compile_lambinator" depends="init"
          description="Compile Lambinator sources."
          if="hasclojure">
    <java classname="clojure.lang.Compile">
      <classpath>
	<path location="${build}"/>
        <path location="${src}"/>
        <path location="${clojure.jar}"/>
        <path location="${clojure_contrib_jar}"/>
	<path location="${qt_jar}"/>
	<path location="${qt_gcc_jar}"/>
	<path location="${jogl_jar}"/>
      </classpath>
      <sysproperty key="clojure.compile.path" value="${build}"/>
      <arg value="lambinator.experiment"/>
      <arg value="lambinator.ui"/>
      <arg value="lambinator.rc"/>
      <arg value="lambinator.rcgl"/>
      <arg value="lambinator.util"/>
      <arg value="lambinator.test"/>
      <arg value="lambinator.mockgl"/>
    </java>
  </target>

  <target name="jar" description="Create jar file." depends="compile_lambinator">
    <jar jarfile="${jarfile}">
      <path location="CPL.TXT"/>
      <fileset dir="${src}" includes="**/*.clj"/>
      <fileset dir="${build}" includes="**/*.class"/>
      <fileset dir="${src}" includes="data/**/*.*"/>
      <manifest>
        <attribute name="Class-Path" value="."/>
      </manifest>
    </jar>
  </target>

</project>
